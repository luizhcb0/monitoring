<%= form_for @device, html: {class: 'form-horizontal'} do |f| %>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

    <div class="">
      <h2>Cadastro de Módulo</h2>
    </div>

    <div class="form-group">
      <%= f.label :serial, "Número de Série", class: "col-sm-4 control-label"%>
      <div class="col-sm-8">
        <%= f.text_field :serial, required: "required", placeholder: "XXXX-XXXX-XX", class: "form-control", id: "serial-field"  %>
        <div class="serial-error"><%= @device.errors[:serial].first %></div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :model, "Modelo", class: "col-sm-4 control-label"%>
      <div class="col-sm-8">
        <%= f.select :model,  device_model_array, {include_blank: "Selecione o Modelo"}, {class: "form-control", required: "required"} %>
      </div>
    </div>

    <%= f.fields_for :dimension, @dimension do |d| %>
      <%= render 'dimension_fields', f: d %>
    <% end %>

    <div class="form-group">
      <%= f.label :description, "Descrição", class: "col-sm-4 control-label"%>
      <div class="col-sm-8">
        <%= f.text_field :description, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :user_ids, "Usuário", class: "col-sm-4 control-label"%>
      <div class="col-sm-8">
        <% User.all.each do |user| %>
          <label class="checkbox-inline">
            <%= f.check_box :user_ids, {:multiple => true}, user.id, nil  %> <%= user.name %>
          </label>
        <% end %>
        <%#= f.select :user_ids, user_array, {include_blank: "Selecione o Usuário"}, {class: "form-control"} %>
      </div>
    </div>

    <%= f.submit "Cadastrar", class: "btn btn-theme" %>

  </div>
</div>
<% end %>
