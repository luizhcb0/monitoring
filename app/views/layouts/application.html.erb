<!DOCTYPE html>
<html>
  <head>
    <title>Monitoring</title>
    <%= csrf_meta_tags %>

    <%#= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    current_theme, media: 'all', 'data-turbolinks-track': 'reload'  %>
    <%= javascript_include_tag current_theme, 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon_logo.ico' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <nav class="navbar navbar-default navbar-fixed-top affix" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to root_path, class: "navbar-brand" do %>
              <%= image_tag "logo_white.png", class: "brand_logo" %>
            <% end %>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="navbar-collapse collapse">
            <% if current_user %>
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to 'Home', root_path %></li>
              </ul>
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(solutions_path) %>"><%= link_to 'Soluções', solutions_path %></li>
              </ul>
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(institutional_path) %>"><%= link_to 'Quem somos', institutional_path %></li>
              </ul>
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(contacts_path) %>"><%= link_to 'Contato', contacts_path %></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <%= link_to root_path, {class: "dropdown-toggle", "data-toggle" => "dropdown", role: "button"} do %>
                    Olá, <%= current_user.name %> <span class="caret"></span>
                    <% end %>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
                    <!--  It does not exist on non admins -->
                  </ul>
                </li>
              </ul>
            <% else %>
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to 'Home', root_path %></li>
              </ul>
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(solutions_path) %>"><%= link_to 'Soluções', solutions_path %></li>
              </ul>
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(institutional_path) %>"><%= link_to 'Quem somos', institutional_path %></li>
              </ul>
              <ul class="nav navbar-nav">
                <li class="<%= 'active' if current_page?(contacts_path) %>"><%= link_to 'Contato', contacts_path %></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li>
                  <%= link_to "Registrar", new_user_registration_path  %>
                </li>
                <li>
                  <%= link_to "Login",  new_user_session_path  %>
                </li>
              </ul>
            <% end %>
          </div><!--/.nav-collapse -->
        </div>
    </nav>

    <section class="container-fluid">
      <%= yield %>
    </section>

  </body>
</html>
