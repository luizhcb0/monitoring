<div class="canvas">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">

      <div class="device-canvas">
        <div class="row tank-info-canvas">
          <div class="col-xs-10 col-sm-8 col-xs-offset-1 col-sm-offset-2">
            <div class="tank-info"></div>
          </div>
        </div>
        <div class="row">
          <div class="tank">
            <div class="water"></div>
          </div>
        </div>

        <button class="btn btn-theme" type="button" name="button" onclick="deviceInfo(this)">Voltar</button>
      </div>

      <div class="devices-canvas">

        <div class="box-devices">
          <% @devices.each_with_index do |l, i| %>

            <div class="device">
              <div class="water-device" id="device-<%= l.id %>" onclick="deviceInfo(this, <%= i + 1 %>)" onmouseenter="deviceResumeShow(this, <%= i + 1 %>)" onmouseleave="deviceResumeHide(this)"></div>
              <div class="device-name">
                <%= i+1 %>
              </div>
            </div>


            <% if (i !=0 && i % 3) == 0 %>
              </div>
              <div class="bar" style="margin-bottom: 4px"></div>
              <div class="box-devices">
            <% end %>

          <% end %>
        </div>
        <div class="col-xs-8 col-sm-6 col-xs-offset-2 col-sm-offset-3 water-device-info-canvas">
          <div class="water-device-info"></div>
        </div>
        <%= hidden_field_tag :hidden_id, @user.id %>

      </div>

    </div>
  </div>
</div>
